---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Nordam Enterprises | Home">
  <!-- The hero component now has a background image -->
  <div class="hero min-h-[calc(100vh-80px)]" style="background-image: url(/images/hero-background2.jpg);">
    <!-- An overlay is added for better text contrast -->
    <div class="hero-overlay bg-gradient-to-r from-blue-900/80 to-transparent"></div>
    
    <!-- The hero content is now aligned to the left -->
    <div class="hero-content text-left text-neutral-content w-full justify-start">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl">
          <h1 class="
              mb-5 
              text-5xl sm:text-6xl
              font-extrabold
              leading-tight
              uppercase
              text-white
            ">
            INNOVATIVE AND <br/>
            RELIABLE <br/>
            <span class="text-6xl sm:text-7xl text-yellow-500">POWER SOLUTIONS</span> <br/>
            IN THE WARM HEART OF AFRICA
          </h1>
          
          <!-- Buttons are updated to look better on a dark background -->
          <div class="flex flex-col sm:flex-row gap-4 justify-start pt-8">
              <a href="/products" class="btn btn-outline border-white text-white hover:bg-primary hover:border-primary hover:text-white">PRODUCTS</a>
              <a href="/services" class="btn btn-outline border-white text-white hover:bg-primary hover:border-primary hover:text-white">SERVICES</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>